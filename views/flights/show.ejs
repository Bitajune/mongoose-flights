<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
    <title>Enter Flights</title>
  </head>
  <body>
<section id="show-page">
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNum %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
</section>
<br><br>


<h2>Add Destination</h2>

<form id="add-review-form" method="POST"
	  action="/flights/<%= flight._id %>">
	<label>Destination
        <select name="airport">
            <option value="AUS">Austin (AUS)</option>
            <option value="DAL">Dallas (DAL)</option>
            <option value="LAX">Los Angeles (LAX)</option>
            <option value="SEA">Seattle (SEA)</option>
        </select> 
    </label><br>
    <label>Arrival Time:
        <input type="datetime-local" id="arrival" name="arrival" value="" min="2020-01-09T00:00" max="2025-06-14T00:00">
        <br />
    <input type="submit" value="Add Destination" />
    <br><a href = '/flights/<%= flight._id%>/tickets'>Add Ticket</a><br>
</form>
<% if (flight.arrival.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Airport</th>
      </tr>
    </thead>
    <tbody>
      <% flight.arrival.forEach(function(r) { %>
      <tr>
        <td><%= Date() %></td>
        <td><%= r.airport %></td>

      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <h5>No Destinations Yet</h5>
  <% } %>
  <table>
    <thead>
      <tr>
        <th>Seat</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(function(r) { %>
      <tr>
        <td><%= r.seat %></td>
        <td>$<%= r.price %></td>
      </tr>
      <% }); %>
    </tbody>
  </body>
  </html>